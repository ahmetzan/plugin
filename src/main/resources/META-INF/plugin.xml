<idea-plugin>
    <id>com.example.entitydto</id>
    <name>Entity-DTO Converter</name>
    <vendor email="you@example.com" url="https://example.com">Your Name</vendor>

    <description>
        Kotlin-based IntelliJ plugin to generate converter methods between Entity and DTO classes.
    </description>

    <depends>com.intellij.modules.java</depends>

    <actions>

        <group id="NextGroup" text="Next" description="Next group for custom actions" popup="true">

            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <!-- Project View sağ tık menüsünde -->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <!-- Editör sağ tık menüsünde -->
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>

        </group>


        <action id="com.example.converter"
                class="com.example.converter.GenerateConverterAction"
                text="Generate Converter"
                description="Generate converter methods between Entity and DTO">
            <!-- Alt+Insert menüsünde -->
            <add-to-group group-id="NextGroup" anchor="last"/>
        </action>

        <action id="com.example.repository"
                class="com.example.repository.GenerateRepositoryAction"
                text="Generate Repository"
                description="Generate Repository Class">
            <!-- Alt+Insert menüsünde -->
            <add-to-group group-id="NextGroup" anchor="last"/>
        </action>

        <action id="com.example.constant"
                class="com.example.constant.GenerateConstantsAction"
                text="Generate Constant"
                description="Generate Constant Class">
            <!-- Alt+Insert menüsünde -->
            <add-to-group group-id="NextGroup" anchor="last"/>
        </action>

        <action id="com.migros.asset.AddErrorMessageToYamlAction"
                class="com.example.error.AddErrorMessageToYamlAction"
                text="Add To ErrorMessage YAML"
                description="Append selected error key to error messages YAML with next service-scoped code">
            <!-- Editor sağ tık menüsü -->
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <!-- (Opsiyonel) Kısayol bağlamak istersen: -->
            <!-- <keyboard-shortcut keymap="Default" first-keystroke="ctrl shift Y"/> -->
            <!-- <keyboard-shortcut keymap="Default for macOS" first-keystroke="shift meta Y"/> -->
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Custom Notifications"
                           displayType="BALLOON"
                           isLogByDefault="true"/>
    </extensions>
</idea-plugin>