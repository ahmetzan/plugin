<idea-plugin>
    <id>com.migros</id>
    <name>Simplifier</name>
    <vendor email="you@example.com" url="https://example.com">Your Name</vendor>

    <description>
        A plugin to simplify repetitive coding tasks and enhance productivity.
    </description>

    <depends>com.intellij.modules.java</depends>

    <actions>

        <group id="GeneratorGroup" text="Generator" description="Generator group for custom actions" popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>


        <action id="com.migros.action.converter"
                class="com.migros.action.converter.GenerateConverterAction"
                text="Generate Converter"
                description="Generate converter methods between Entity and DTO">
            <add-to-group group-id="GeneratorGroup" anchor="last"/>
        </action>

        <action id="com.migros.action.repository"
                class="com.migros.action.repository.GenerateRepositoryAction"
                text="Generate Repository"
                description="Generate Repository Class">
            <add-to-group group-id="GeneratorGroup" anchor="last"/>
        </action>

        <action id="com.migros.action.constant"
                class="com.migros.action.constant.GenerateConstantsAction"
                text="Generate Constant"
                description="Generate Constant Class">
            <add-to-group group-id="GeneratorGroup" anchor="last"/>
        </action>

        <action id="com.migros.action.error"
                class="com.migros.action.error.AddErrorMessageToYamlAction"
                text="Add To ErrorMessage YAML"
                description="Append selected error key to error messages YAML with service-scoped code">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Custom Notifications"
                           displayType="BALLOON"
                           isLogByDefault="true"/>

        <statusBarWidgetFactory
                id="TimeWidget"
                implementation="com.migros.widget.statusbar.TimeWidgetFactory"/>

        <localInspection
                language="JAVA"
                displayName="Suspicious equality check"
                groupName="Simplifier"
                shortName="EqualityInspection"
                level="WARNING"
                implementationClass="com.migros.inspection.EqualityInspection"/>

        <checkinHandlerFactory implementation="com.migros.hook.CommitMessageCheckFactory"/>

    </extensions>
</idea-plugin>