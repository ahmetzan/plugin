<idea-plugin>
    <id>com.migros</id>
    <name>Simplifier</name>
    <vendor email="you@example.com" url="https://example.com">Your Name</vendor>

    <description>
        A plugin to simplify repetitive coding tasks and enhance productivity.
    </description>

    <depends>com.intellij.modules.java</depends>

    <actions>

        <group id="SimplifierGroup" text="Simplifier" description="Simplifier group for custom actions" popup="true">

            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <!-- Project View sağ tık menüsünde -->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <!-- Editör sağ tık menüsünde -->
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>

        </group>


        <action id="com.migros.action.converter"
                class="com.migros.action.converter.GenerateConverterAction"
                text="Generate Converter"
                description="Generate converter methods between Entity and DTO">
            <!-- Alt+Insert menüsünde -->
            <add-to-group group-id="SimplifierGroup" anchor="last"/>
        </action>

        <action id="com.migros.action.repository"
                class="com.migros.action.repository.GenerateRepositoryAction"
                text="Generate Repository"
                description="Generate Repository Class">
            <!-- Alt+Insert menüsünde -->
            <add-to-group group-id="SimplifierGroup" anchor="last"/>
        </action>

        <action id="com.migros.action.constant"
                class="com.migros.action.constant.GenerateConstantsAction"
                text="Generate Constant"
                description="Generate Constant Class">
            <!-- Alt+Insert menüsünde -->
            <add-to-group group-id="SimplifierGroup" anchor="last"/>
        </action>

        <action id="com.migros.asset.AddErrorMessageToYamlAction"
                class="com.migros.action.error.AddErrorMessageToYamlAction"
                text="Add To ErrorMessage YAML"
                description="Append selected error key to error messages YAML with service-scoped code">
            <!-- Editor sağ tık menüsü -->
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <!-- (Opsiyonel) Kısayol bağlamak istersen: -->
            <!-- <keyboard-shortcut keymap="Default" first-keystroke="ctrl shift Y"/> -->
            <!-- <keyboard-shortcut keymap="Default for macOS" first-keystroke="shift meta Y"/> -->
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Custom Notifications"
                           displayType="BALLOON"
                           isLogByDefault="true"/>

        <statusBarWidgetFactory
                id="TimeWidget"
                implementation="com.migros.widget.statusbar.TimeWidgetFactory"/>

<!--        <localInspection language="JAVA"-->
<!--                         bundle="messages.InspectionBundle"-->
<!--                         key="inspection.comparing.string.references.display.name"-->
<!--                         groupPath="Java"-->
<!--                         groupBundle="messages.InspectionsBundle"-->
<!--                         groupKey="group.names.probable.bugs"-->
<!--                         enabledByDefault="true"-->
<!--                         level="WARNING"-->
<!--                         implementationClass="com.migros.inspection.ComparingStringReferencesInspection"/>-->

        <checkinHandlerFactory implementation="com.migros.hook.CommitMessageCheckFactory"/>

    </extensions>
</idea-plugin>